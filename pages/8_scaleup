import streamlit as st

# Function to create a single field
def create_field(label, field_type="text", options=None):
    if field_type == "text":
        return st.text_input(label)
    elif field_type == "select":
        return st.selectbox(label, options)
    elif field_type == "checkbox":
        return st.checkbox(label)
    # Add more field types as needed

# Main app function
def main():
    st.title("Dynamic Form")

    with st.form("my_form"):
        # Example of creating a text input
        first_name = create_field("FirstName")
        last_name = create_field("LastName")
        address = create_field("Address")
        city = create_field("City")
        state = create_field("State")
        zip_code = create_field("ZipCode")
        phone = create_field("Phone")
        allergy1 = create_field("Allergy1")
        allergy2 = create_field("Allergy2")
        # Continue for other fields as per your data
        
        # Form submission button
        submitted = st.form_submit_button("Submit")
        if submitted:
            st.write("Form Submitted!")

# Run the app
if __name__ == "__main__":
    main()